<div class="comment-item">
  <div>
    <strong><%= comment.user&.email_address || t('comments.anonymous') %></strong>
    <span>· <%= t('datetime.ago', time: time_ago_in_words(comment.created_at)) %></span>
    <button class="delete-comment-btn" data-comment-id="<%= comment.id %>" title="Delete">×</button>
  </div>
  <div class="comment-content">
    <%= h comment.content %>
  </div>
</div>
