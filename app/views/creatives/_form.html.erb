<%= form_with model: creative do |form| %>

  <% if form.object.parent_id.present? && form.object.parent %>
    <div>
      <strong><%= t('.parent_creative') %>:</strong>
      <div style="margin: 0.5em 0 1em 0; padding: 0.5em; border-radius: 5px;">
        <%= form.object.parent.description.to_plain_text %>
      </div>
      <%= form.hidden_field :parent_id %>
    </div>
  <% end %>

  <% if params[:child_id].present? && defined?(@child_creative) && @child_creative %>
    <div>
      <strong><%= t('.child_creative', default: 'Child Creative') %>:</strong>
      <div style="margin: 0.5em 0 1em 0; padding: 0.5em; border-radius: 5px;">
        <%= @child_creative.description.to_plain_text if @child_creative&.description.present? %>
      </div>
      <%= hidden_field_tag :child_id, @child_creative.id %>
    </div>
  <% elsif params[:child_id].present? %>
    <%= hidden_field_tag :child_id, params[:child_id] %>
  <% end %>

  <% if params[:after_id].present? %>
    <%= hidden_field_tag :after_id, params[:after_id] %>
  <% end %>

  <% if params[:tags].present? %>
    <% Array(params[:tags]).each do |tag_id| %>
      <%= hidden_field_tag 'tags[]', tag_id %>
    <% end %>
  <% end %>

  <div>
    <%= form.label :description, t('.description'), style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <br/>
<% if form.object.children.empty? %>
  <div>
    <%= form.label :progress, t('.progress'), style: "display: block" %>
    <div style="display: flex; align-items: center; gap: 1em;">
      <%= form.range_field :progress, min: 0, max: 1, step: 0.01, style: 'flex:1' %>
      <span id="progress-value" style="width: 3em; display: inline-block; text-align: right;">
        <%= form.object.progress || 0 %>
      </span>
    </div>
    <script>
      document.addEventListener('turbo:load', function() {
        var slider = document.querySelector('[name="creative[progress]"][type="range"]');
        var valueSpan = document.getElementById('progress-value');
        if (slider && valueSpan) {
          slider.addEventListener('input', function() {
            valueSpan.textContent = slider.value;
          });
        }
      });
    </script>
  </div>
  <br/>
<% end %>

  <div>
    <%= form.submit t('.submit') %>
  </div>
<% end %>
